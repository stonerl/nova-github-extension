{
  "identifier": "stonerl.GitHub",
  "name": "GitHub",
  "organization": "Toni Förster",
  "description": "Browse, manage, and triage GitHub issues and pull requests directly from Nova’s sidebar.",
  "version": "0.2.0",
  "categories": ["sidebars"],

  "main": "main.js",
  "activationEvents": ["onView:github-issues"],

  "config": [
    {
      "key": "owner",
      "type": "string",
      "title": "Repository Owner",
      "description": "GitHub username or organization.",
      "default": "",
      "placeholder": "stonerl",
      "required": true
    },
    {
      "key": "token",
      "type": "string",
      "title": "Personal Access Token",
      "description": "Must have ‘repo’ (or ‘public_repo’) scope. Click the question mark to generate a token with the correct permissions.",
      "link": "https://github.com/settings/tokens/new?scopes=repo&description=GitHub%20for%20Nova",
      "default": "",
      "placeholder": "ghp_xxx...",
      "required": true
    },
    {
      "key": "refreshInterval",
      "type": "number",
      "title": "Refresh Interval",
      "description": "How often (in minutes) to automatically refresh issues and PRs. Setting this too low may increase the chance of hitting GitHub’s rate limits.",
      "required": true,
      "placeholder": "30",
      "default": 30,
      "minimum": 1
    },
    {
      "key": "itemsPerPage",
      "type": "number",
      "title": "Recent Items",
      "description": "Number of recently updated issues and PRs to fetch and display (maximum 100)",
      "required": true,
      "placeholder": "30",
      "default": 30,
      "minimum": 1,
      "maximum": 100
    }
  ],

  "configWorkspace": [
    {
      "key": "repo",
      "type": "string",
      "title": "Repository Name",
      "description": "Name of the GitHub repository (e.g. nova-github-extension, not the URL).",
      "default": "",
      "placeholder": "nova-github-extension",
      "required": true
    }
  ],

  "entitlements": {
    "clipboard": true,
    "filesystem": "readwrite",
    "requests": true
  },

  "commands": {
    "extensions": [
      {
        "title": "Refresh Issues and Pull Requests",
        "command": "github-issues.refresh"
      }
    ]
  },

  "sidebars": [
    {
      "id": "github-issues",
      "smallImage": "sidebar-small",
      "largeImage": "sidebar-large",
      "name": "GitHub",

      "sections": [
        {
          "id": "issues",
          "name": "Open Issues",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No open issues.",
          "headerCommands": [
            {
              "title": "New Issue",
              "image": "__builtin.add",
              "tooltip": "Open new GitHub issue",
              "command": "github-issues.newIssue"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root' || viewItem == 'comment'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            },
            { "separator": true },
            {
              "title": "Close Issue",
              "command": "github-issues.closeIssue",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Close as Not Planned",
              "command": "github-issues.closeNotPlanned",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Close as Duplicate",
              "command": "github-issues.closeDuplicate",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "closed-issues",
          "name": "Closed Issues",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No closed issues.",
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root' || viewItem == 'comment'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            },
            { "separator": true },
            {
              "title": "Reopen Issue",
              "command": "github-issues.reopenIssue",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "pulls",
          "name": "Open Pull Requests",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No open pull requests.",
          "headerCommands": [
            {
              "title": "New Pull Request",
              "image": "__builtin.add",
              "tooltip": "Open new GitHub pull request",
              "command": "github-issues.newPullRequest"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root' || viewItem == 'comment'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "closed-pulls",
          "name": "Closed Pull Requests",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No closed pull requests.",
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root' || viewItem == 'comment'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            }
          ]
        }
      ]
    }
  ]
}
