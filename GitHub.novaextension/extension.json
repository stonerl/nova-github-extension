{
  "identifier": "stonerl.GitHub",
  "name": "GitHub",
  "organization": "Toni FÃ¶rster",
  "description": "A simple sidebar to list open GitHub issues.",
  "version": "1.0",
  "categories": ["sidebars"],

  "main": "main.js",
  "activationEvents": ["onView:github-issues"],

  "config": [
    {
      "key": "token",
      "type": "string",
      "title": "GitHub Personal Access Token",
      "description": "Must have `repo` (or `public_repo`) scope",
      "default": ""
    },
    {
      "key": "owner",
      "type": "string",
      "title": "Repository Owner",
      "description": "GitHub username or organization",
      "default": ""
    },
    {
      "key": "repo",
      "type": "string",
      "title": "Repository Name",
      "description": "Name of the GitHub repository",
      "default": ""
    }
  ],

  "entitlements": {
    "clipboard": true,
    "filesystem": "readwrite",
    "requests": true
  },

  "sidebars": [
    {
      "id": "github-issues",
      "smallImage": "sidebar-small",
      "largeImage": "sidebar-large",
      "name": "GitHub",

      "sections": [
        {
          "id": "issues",
          "name": "Open Issues",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No open issues.",
          "headerCommands": [
            {
              "title": "New Issue",
              "image": "__builtin.add",
              "tooltip": "Open new GitHub issue",
              "command": "github-issues.newIssue"
            },
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Reload open issues",
              "command": "github-issues.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            },
            { "separator": true },
            {
              "title": "Close Issue",
              "command": "github-issues.closeIssue",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Close as Not Planned",
              "command": "github-issues.closeNotPlanned",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Close as Duplicate",
              "command": "github-issues.closeDuplicate",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "closed-issues",
          "name": "Closed Issues",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No closed issues.",
          "headerCommands": [
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Reload closed issues",
              "command": "github-issues.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            },
            { "separator": true },
            {
              "title": "Reopen Issue",
              "command": "github-issues.reopenIssue",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "pulls",
          "name": "Open Pull Requests",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No open pull requests.",
          "headerCommands": [
            {
              "title": "New Pull Request",
              "image": "__builtin.add",
              "tooltip": "Open new GitHub pull request",
              "command": "github-issues.newPullRequest"
            },
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Reload open pull requests",
              "command": "github-issues.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            }
          ]
        },
        {
          "id": "closed-pulls",
          "name": "Closed Pull Requests",
          "allowMultiple": false,
          "placeholderImage": "sidebar-large",
          "placeholderText": "No closed pull requests.",
          "headerCommands": [
            {
              "title": "Refresh",
              "image": "__builtin.refresh",
              "tooltip": "Reload closed pull requests",
              "command": "github-issues.refresh"
            }
          ],
          "contextCommands": [
            {
              "title": "Open on GitHub",
              "command": "github-issues.openInBrowser",
              "when": "viewItem == 'issue-root'"
            },
            {
              "title": "Copy GitHub URL",
              "command": "github-issues.copyUrl",
              "when": "viewItem == 'issue-root'"
            }
          ]
        }
      ]
    }
  ]
}
